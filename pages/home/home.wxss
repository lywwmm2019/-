.main{
    width:100%;
}
.main swiper{
    width:100%;
    height:200px;
}
.slide-image{
    width: 100%;
    height:200px;
}
.list{
   width: 100%; 
}
.list .item{
    width:19rem;
    padding:0.5rem;
    display: flex;
    border-bottom: #edecea 1px solid;
    position: relative;
}


.list .item navigator{
    position: absolute;
    width:100%;
    height:100%;
    top:0;
    left:0;
    z-index:333;
}

.list .item .item-img{
   width:6rem; 
   height:5rem;
}
.list .item-text{
    width:12.5rem;
    padding-left:0.5rem;
}
.list .item-text text{
    width:12.5rem;
    display:block;
}
.list .item-text .list-title{
    font-size:15px;
    color:#474541;
    padding-top:0.1rem;
}
.list .item-text .list-type{
    font-size:13px;
    color:#777573;
    padding-top:0.3rem;
}
.list .item-text .list-word{
    font-size:12px;
    color:#949290; 
    padding-top:0.4rem;  
    display:block; 
    -webkit-line-clamp:4;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    overflow:hidden;
}
